{
    "name": "light/light",
    "type": "project",
    "description": "Light Framework.",
    "keywords": [
        "Light",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-mysqli": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-rest": "^1.0.0",
        "codeception/module-phpbrowser": "^1.0.0"
    }
}
